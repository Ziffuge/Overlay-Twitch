				}
			]
		},
		{
			"Icon": "imgs/actions/server-request/serverRequestIcon",
			"Name": "Local Server Request",
			"Controllers": ["Keypad", "Encoder"],
			"Encoder": {
				"layout": "$B1",
				"TriggerDescription": {
					"Rotate": "Describe the rotation",
					"Push": "Describe the encoder push",
